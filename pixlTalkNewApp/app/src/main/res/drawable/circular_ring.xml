<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer transparent area for the rounded corners effect -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/> <!-- Transparent background -->
        </shape>
    </item>

    <!-- Inner square with rounded corners -->
    <item
        android:left="4dp"
        android:right="4dp"
        android:top="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/> <!-- Adjust the radius for the desired roundness -->
            <solid android:color="#E9E3DFDF"/> <!-- Background color inside the ring -->
        </shape>
    </item>
</layer-list>
